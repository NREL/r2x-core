{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "packages": {
    ".": {
      "changelog-path": "CHANGELOG.md",
      "changelog-sections": [
        {
          "hidden": false,
          "section": "Features",
          "type": "feat"
        },
        {
          "hidden": false,
          "section": "Bug Fixes",
          "type": "fix"
        },
        {
          "hidden": false,
          "section": "Performance",
          "type": "perf"
        },
        {
          "hidden": false,
          "section": "Refactoring",
          "type": "refactor"
        },
        {
          "hidden": false,
          "section": "Documentation",
          "type": "docs"
        },
        {
          "hidden": false,
          "section": "CI/CD",
          "type": "ci"
        },
        {
          "hidden": false,
          "section": "Build",
          "type": "build"
        },
        {
          "hidden": true,
          "section": "Chores",
          "type": "chore"
        },
        {
          "hidden": false,
          "section": "Tests",
          "type": "test"
        }
      ],
      "bump-minor-pre-major": true,
      "draft": false,
      "extra-files": [
        {
          "jsonpath": "$.package[?(@.name.value=='r2x-core')].version",
          "path": "uv.lock",
          "type": "toml"
        },
        {
          "path": "docs/source/conf.py",
          "type": "generic"
        }
      ],
      "include-component-in-tag": false,
      "package-name": "r2x-core",
      "prerelease": false,
      "release-type": "python"
    }
  }
}
